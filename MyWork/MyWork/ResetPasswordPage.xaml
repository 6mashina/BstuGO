<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWork.ResetPasswordPage">
    <ContentPage.Content>
        <StackLayout >
            <Label Text="Восстановление доступа"
                   Margin="0, 20, 0, 100"
                   TextColor="Black"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            
            <Label Text="Электронная почта"
                   Margin="20, 0, 10, 0"
                   TextColor="Black"
                   FontSize="18"/>
            
                
                <Entry x:Name="emailEntry" 
                       Placeholder=" Email"
                       Margin="20, 0, 20, 0"/>

            <Button Text="Восстановить пароль" Clicked="ResetPasswordButton_Clicked" 
                    TextColor="White" 
                    BackgroundColor="#2196f3" 
                    CornerRadius="15"   
                    Margin="80,10,80,0"/>
            
            <Button Text="Назад" Clicked="BackClicked"                     
                    TextColor="White" 
                    BackgroundColor="#2196f3" 
                    CornerRadius="15"   
                    Margin="80,10,80,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>