<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWork.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="РЕГИСТРАЦИЯ ТЕСТОВАЯ"/>
            <Entry x:Name="enrtyEmail" Placeholder="Email"/>
            <Entry x:Name="enrtyPassword" Placeholder="Password"/>
            <Button x:Name="butEnter" Text="Вход" Clicked="butEnter_Clicked"/>

            <Entry x:Name="entryFirstName" Placeholder="Name"/>
            <Entry x:Name="entryLastName" Placeholder="Surname"/>
            <Entry x:Name="registrEmail" Placeholder="Email"/>
            <Entry x:Name="registrPassword" Placeholder="Password"/>
            <Entry x:Name="repPassword" Placeholder="repeat Password"/>
            <Button x:Name="butRegister" Text="Registration" Clicked="butRegister_Clicked"/>

            <StackLayout>
                <Label Text="РЕГИСТРАЦИЯ ТЕСТОВАЯ"/>
                <Entry x:Name="emailEntry" Placeholder="Email"/>
                <Button x:Name="resetPasswordButton" Text="Забыли пароль?" Clicked="ResetPasswordButton_Clicked"/>
            </StackLayout>

            <Button x:Name="enterCabiner" Text="Вход в кабинет" Clicked="butenterCabiner"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>